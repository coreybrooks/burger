<h1>Burger Time!!</h1>

<div>
    <h1>Burgers to eat</h1>
    <ul> 
        {{#each burgers}}
         {{#unless this.devoured}}
         <li>
             {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">BURGER TIME!</button>
            </form>

         </li> 
         {{/unless}}
        {{/each}}
    </ul>        
</div>

<div>
    <h1>Burgers that got ate yo</h1>
    <ul>
        {{#each}}
          {{#if this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    <button type="submit">MAKE ANOTHER!</button>
                </form>

            </li>    
          {{/if}}
        {{/each}}
    </ul>    
</div>

<div>
    <h2>Add a Burger</h2>
    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="burger_name">
        </div>
        <div class="form-group">
            <label for="dv">Devoured?</label>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0">Not Eaten
        </div>

        <button type="submit">Add Burger</button>
    </form>        
</div>    