<body class="body">

<div class="container">
<div class="headDiv">
</div>


<h1 class="text-center">Burger Time!!</h1>
<br><br><br>

<div class="row">
  <div class="col-lg-1">
  </div>      
  <div class="col-lg-3">  
    <h4><u>Burgers to eat</u></h4>
    <ul> 
        {{#each burger}}
         {{#unless this.devoured}}
         <li>
             {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">EAT BURGER!</button>
            </form>

         </li> 
         {{/unless}}
        {{/each}}
    </ul>        
  </div>

  <div class="col-lg-1">
  </div>

  <div class="col-lg-3">
    <h4><u>Burgers I Ate</u></h4>
    <ul>
        {{#each burger}}
          {{#if this.devoured}}
            <li>
                {{this.burger_name}}

                <form action="/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="devoured" value="false">
                    <button type="submit">MAKE ANOTHER!</button>
                </form>

            </li>    
          {{/if}}
        {{/each}}
    </ul>    
  </div>

  <div class="col-lg-1">
  </div>

  <div class="col-lg-2">  
    <h4><u>Add Burger</u></h4>
    <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="burger_name">
        </div>
        <div class="form-group">
            <label for="dv">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0">Not Eaten
        </div>

        <button type="submit">Add Burger</button>
    </form> 
  </div>

  <div class="col-lg-1">
  </div>
</div>    

</div>

</body>